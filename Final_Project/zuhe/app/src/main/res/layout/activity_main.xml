<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/background">

    <ImageButton
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="记事本"
        android:id="@+id/jishi"
        android:background="@drawable/note"
        android:scaleType="centerCrop"
        android:layout_marginBottom="43dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/zhinan" />
    <ImageButton
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="通讯录"
        android:id="@+id/tongxun"
        android:background="@drawable/people"
        android:layout_marginTop="54dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/zhinan" />
    <ImageButton
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="计算器"
        android:id="@+id/jisuan"
        android:background="@drawable/cal"
        android:layout_alignTop="@+id/jishi"
        android:layout_alignStart="@+id/guishu" />
    <ImageButton
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="播放器"
        android:id="@+id/bofang"
        android:background="@drawable/music"
        android:layout_alignTop="@+id/tongxun"
        android:layout_alignStart="@+id/guishu" />
    <ImageButton
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="指南针"
        android:id="@+id/zhinan"
        android:background="@drawable/set"
        android:layout_marginStart="50dp"
        android:layout_alignTop="@+id/guishu"
        android:layout_alignParentStart="true" />
    <ImageButton
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机归属地"
        android:id="@+id/guishu"
        android:background="@drawable/phone"
        android:layout_marginEnd="44dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
